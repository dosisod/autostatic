{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "bin/",
    "rootDir": "src/",
    "baseUrl": "./",
    "esModuleInterop": true,

    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/*",
    "./src-client/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
